<!doctype html>
<html lang="sv">
<head>
  <meta charset="utf-8" />
  <title>Enkel sida: räknare + todo</title>
  <style>
    body{font-family:system-ui,Segoe UI,Roboto,Arial;margin:24px;}
    button{margin:4px;}
    .todo-item{margin:6px 0;}
  </style>
</head>
<body>
  <h1>Räknare</h1>
  <div>
    <button id="dec">-</button>
    <span id="count">0</span>
    <button id="inc">+</button>
    <button id="reset">Återställ</button>
  </div>

  <h1>Att-göra</h1>
  <input id="todo-input" placeholder="Ny uppgift...">
  <button id="add-btn">Lägg till</button>
  <div id="todos"></div>

  <script>
    // Räknare
    let count = 0;
    const countEl = document.getElementById('count');
    document.getElementById('inc').onclick = () => countEl.textContent = ++count;
    document.getElementById('dec').onclick = () => countEl.textContent = --count;
    document.getElementById('reset').onclick = () => { count = 0; countEl.textContent = count; }

    // Enkel todo i minnet
    const todosDiv = document.getElementById('todos');
    const input = document.getElementById('todo-input');

    function renderTodos(list) {
      todosDiv.innerHTML = '';
      list.forEach((t, i) => {
        const div = document.createElement('div');
        div.className = 'todo-item';
        const chk = document.createElement('input');
        chk.type = 'checkbox';
        chk.checked = t.done;
        chk.onchange = () => { list[i].done = chk.checked; renderTodos(list); };
        const span = document.createElement('span');
        span.textContent = " " + t.text + (t.done ? " ✅" : "");
        const rm = document.createElement('button');
        rm.textContent = 'Ta bort';
        rm.onclick = () => { list.splice(i,1); renderTodos(list); };
        div.appendChild(chk);
        div.appendChild(span);
        div.appendChild(rm);
        todosDiv.appendChild(div);
      });
    }

    const todos = [];
    document.getElementById('add-btn').onclick = () => {
      const text = input.value.trim();
      if (!text) return;
      todos.push({text, done: false});
      input.value = '';
      renderTodos(todos);
    };
  </script>
</body>
</html> 
